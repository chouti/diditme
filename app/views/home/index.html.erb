<div id="home">
	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<div id="review" class="intro">
		<div id="review_intro" class="left">
			<h1>Review achievements has never been so easy...</h1>
			<p>Reviewing your achievements on daily bases has never been so easy.</p>
		</div>
		<div id="review_img" class="right"><%= image_tag 'dummy.png',:width=>'320px' %></div>
	</div>
	<div id="calendar" class="intro">
		<div id="calendar_img" class="left">
			<%= image_tag 'dummy.png', :width => '320px'%>
		</div>
		<div id="calendar_intro" class="right">
			<h1>View achievements in the calendar view</h1>
			<p>Take the calendar view, to check your achievements more clearly</p>
		</div>
	</div>
	<div id="graph" class="intro">
		<div id="graph_intro" class="left">
			<h1>Summary achievements with graphic</h1>
			<p>Your achievements, with beautiful graphics.</p>
		</div>
		<div id="graph_img" class="right"><%= image_tag 'dummy.png', :width=>'320px'%></div>
	</div>
</div>